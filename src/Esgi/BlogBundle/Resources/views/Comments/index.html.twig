{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Comments list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentpostid</th>
                <th>Commentauthor</th>
                <th>Commentcreatedat</th>
                <th>Commentupdatedat</th>
                <th>Commenttitle</th>
                <th>Commentcontent</th>
                <th>Commentapprouved</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('esgi_blog_comments_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.commentPostId }}</td>
                <td>{{ entity.commentAuthor }}</td>
                <td>{% if entity.commentCreatedAt %}{{ entity.commentCreatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.commentUpdatedAt %}{{ entity.commentUpdatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.commentTitle }}</td>
                <td>{{ entity.commentContent }}</td>
                <td>{{ entity.commentApprouved }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('esgi_blog_comments_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('esgi_blog_comments_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('esgi_blog_comments_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
