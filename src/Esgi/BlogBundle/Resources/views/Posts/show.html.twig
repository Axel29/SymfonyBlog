{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Posts</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Postauthor</th>
                <td>{{ entity.postAuthor }}</td>
            </tr>
            <tr>
                <th>Postcreatedat</th>
                <td>{{ entity.postCreatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Postupdateat</th>
                <td>{{ entity.postUpdateAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Posttitle</th>
                <td>{{ entity.postTitle }}</td>
            </tr>
            <tr>
                <th>Postcontent</th>
                <td>{{ entity.postContent }}</td>
            </tr>
            <tr>
                <th>Poststatus</th>
                <td>{{ entity.postStatus }}</td>
            </tr>
            <tr>
                <th>Commentsallowed</th>
                <td>{{ entity.commentsAllowed }}</td>
            </tr>
            <tr>
                <th>Commentscount</th>
                <td>{{ entity.commentsCount }}</td>
            </tr>
            <tr>
                <th>Postimage</th>
                <td>{{ entity.postImage }}</td>
            </tr>
            <tr>
                <th>Postslug</th>
                <td>{{ entity.postSlug }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('esgi_blog_post') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('esgi_blog_post_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
